<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <system>
            <restapi_logger>
                <api_logging_enabled>0</api_logging_enabled>
                <maximum_payload_length>65000</maximum_payload_length>
                <payload_placeholders>
                    password:*******
                </payload_placeholders>
                <http_request_methods_to_log>GET,POST,PUT,DELETE</http_request_methods_to_log>
                <api_response_logging_enabled>0</api_response_logging_enabled>
                <logging_retention_period>3</logging_retention_period>
                <rest_endpoints_to_log>*</rest_endpoints_to_log>
                <rest_endpoints_to_skip>
                    /rest/*/V1/guest-carts/*
                    /rest/*/V1/customers/isEmailAvailable
                    /rest/*/V1/carts/mine/*
                </rest_endpoints_to_skip>
                <log_table_optimization_enabled>0</log_table_optimization_enabled>
            </restapi_logger>
        </system>
    </default>
</config>
